<strong class="@Class">
    @Text
</strong>

@code {
    [Parameter]
    public required string Text { get; set; }

    [Parameter]
    public GdsTagColour? Colour { get; set; }

    [Parameter]
    public string? AdditionalCssClasses { get; set; }

    private string Class => $"govuk-tag {Colour?.GetValue() ?? string.Empty} {AdditionalCssClasses}";
}
