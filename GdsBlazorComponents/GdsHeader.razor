<header class="govuk-header" role="banner" data-module="govuk-header">
    <div class="govuk-header__container govuk-width-container">
        <div class="govuk-header__logo">
            <a href="@ServiceUrl" class="govuk-header__link govuk-header__link--homepage">
                <img src="@LogoUrl" alt="@ServiceName" height="40" class="govuk-header__logotype" />
                <span class="govuk-header__product-name">@ServiceName</span>
            </a>
        </div>
        @if (NavLinks != null)
        {
            <div class="govuk-header__content">
                <nav aria-label="Menu" class="govuk-header__navigation">
                    <button type="button" class="govuk-header__menu-button govuk-js-header-toggle" aria-controls="@_navigationId" aria-label="Show or hide menu" aria-expanded="false">Menu</button>
                    <ul id="@_navigationId" class="govuk-header__navigation-list">
                        @NavLinks
                    </ul>
                </nav>
            </div>
        }
    </div>
</header>

@code {
    [Parameter, EditorRequired]
    public string ServiceName { get; set; }

    [Parameter, EditorRequired]
    public string ServiceUrl { get; set; }

    [Parameter, EditorRequired]
    public string LogoUrl { get; set; }

    [Parameter]
    public RenderFragment? NavLinks { get; set; }

    private string _navigationId = $"navigation-{Guid.NewGuid()}";
}